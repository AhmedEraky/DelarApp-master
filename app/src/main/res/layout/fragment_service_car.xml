<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".fragment.upload.ServiceCarFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/upload_driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم السائق"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/upload_driver_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/upload_driver_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="متجه من"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@id/upload_driver_name"
            android:layout_marginTop="@dimen/_10sdp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/upload_driver_start_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/upload_driver_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="متجه الي"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@id/upload_driver_start"
            android:layout_marginTop="@dimen/_10sdp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/upload_driver_destination_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/upload_driver_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نوع السياره"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@id/upload_driver_destination"
            android:layout_marginTop="@dimen/_10sdp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/upload_driver_car_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/upload_driver_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="موعد الرحله"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@id/upload_driver_car"
            android:layout_marginTop="@dimen/_10sdp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/upload_driver_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/upload_driver_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@id/upload_driver_time"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="عدد المقاعد"
                android:fontFamily="@font/cairo_semibold"
                android:layout_centerVertical="true"
                android:textColor="#000"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/plus"
                android:id="@+id/increaseSeat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/increaseSeat"
                android:text="4"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:id="@+id/numberOfSeats"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/minus"
                android:layout_toRightOf="@+id/numberOfSeats"
                android:id="@+id/decreaseSeats"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upload_driver_seat"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            >
            <Button
                android:id="@+id/service_provider_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/login_btn_design"
                android:text="التالي"
                android:textColor="#fff"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_15sdp"

                />

            <Button
                android:id="@+id/service_provider2_previous"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_btn_design"
                android:text="السابق"
                android:textColor="#fff"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_15sdp"
                />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>