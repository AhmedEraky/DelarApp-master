<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/row_product_layout"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:id="@+id/row_linear_layout"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/row_product_name"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp" />

        <RatingBar
            android:id="@+id/row_product_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:numStars="5"
            android:rating="5"
            android:layout_marginBottom="@dimen/_20sdp"
            android:theme="@style/RatingBar" />

    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_product_img"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/row_linear_layout" />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_40sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/arrow"
        />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#b64f54" />
</RelativeLayout>