<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/product_fragment_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical"
        tools:context=".fragment.user.ProductDetailsFragment">


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/product_details_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_details_img_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/clinic" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="80"
                        android:background="#ffffff">

                        <ImageView
                            android:id="@+id/product_details_img_location"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/location2"/>

                        <TextView
                            android:id="@+id/product_details_txt_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toLeftOf="@id/product_details_img_location"
                            android:gravity="right"
                            android:text="37 ش المبرمجين بالقريه الزكي"
                            android:textAlignment="gravity"
                            android:textColor="#000"
                            android:fontFamily="@font/cairo_semibold"
                            android:textSize="@dimen/_10sdp" />

                        <RatingBar
                            android:id="@+id/product_details_ratingbar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/product_details_txt_location"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_alignParentLeft="true"
                            android:numStars="5"
                            android:rating="5"
                            android:theme="@style/RatingBar" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/phone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="80"
                        android:background="#ffffff">

                        <ImageView
                            android:id="@+id/product_details_img_phone"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/phone2" />




                        <TextView
                            android:id="@+id/product_details_txt_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toLeftOf="@id/product_details_img_phone"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="right"
                            android:text="0263538459"
                            android:textSize="@dimen/_10sdp"
                            android:textAlignment="gravity" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/phone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="80"
                        android:background="#ffffff">

                        <ImageView
                            android:id="@+id/product_details_img_phone2"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/phone2" />




                        <TextView
                            android:id="@+id/product_details_txt_phone2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toLeftOf="@id/product_details_img_phone2"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="right"
                            android:text="0263538459"
                            android:textSize="@dimen/_10sdp"
                            android:textAlignment="gravity" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <RelativeLayout
                        android:id="@+id/product_details_layout_specialist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="80"
                        android:background="#ffffff">

                        <ImageView
                            android:id="@+id/product_details_img_doctor"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/doctor" />

                        <TextView
                            android:id="@+id/product_details_txt_specialist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toLeftOf="@id/product_details_img_doctor"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="right"
                            android:text="التخصصات المتاحة"
                            android:textSize="@dimen/_10sdp"
                            android:textAlignment="gravity" />
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/droparrow"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/_25sdp"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/listDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        >

                        <TextView
                            android:id="@+id/product_details_txt_clinic_specialist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:textSize="@dimen/_16sdp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_details_list_specialist"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fitsSystemWindows="true"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/product_details_btn_chat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp"
                    android:background="@drawable/ride_status_green"
                    android:text="اطلب الخدمه" />

                <TextView
                    android:id="@+id/product_details_txt_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:text="صور المكان"
                    android:textColor="#000"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:fontFamily="@font/cairo_semibold"/>

                <com.ryan.rv_gallery.GalleryRecyclerView
                    android:id="@+id/product_details_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:helper="PagerSnapHelper" />


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>




        <ImageView
            android:id="@+id/product_details_img_chat"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/chating" />


    </RelativeLayout>

    <include layout="@layout/ads_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>