<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".fragment.upload.ServiceProviderFragmentHospital">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/service_provider_hospital_layout"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="اختار التخصصات"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="#000"/>
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_provider_hospital_layout"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            >
            <Button
                android:id="@+id/service_provider_hospital_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/login_btn_design"
                android:text="التالي"
                android:textColor="#fff"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_15sdp"

                />

            <Button
                android:id="@+id/service_provider_hospital_previous"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_btn_design"
                android:text="السابق"
                android:textColor="#fff"
                android:fontFamily="@font/cairo_semibold"
                android:textSize="@dimen/_15sdp"
                />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>