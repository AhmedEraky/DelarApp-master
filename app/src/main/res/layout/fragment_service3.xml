<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".fragment.upload.UploadDataFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="match_parent">


            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/cairo_semibold"
                android:text="تاكيد رفع البيانات ؟"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="bottom"
                >
                <Button
                    android:id="@+id/service_provider3_accept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/ride_status_green"
                    android:text="نعم"
                    android:textColor="#fff"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_15sdp"

                    />

                <Button
                    android:id="@+id/service_provider3_reject"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ride_status_green"
                    android:text="الغاء"
                    android:textColor="#fff"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/ads_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>



