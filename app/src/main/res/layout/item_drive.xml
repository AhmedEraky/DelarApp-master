<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/ride_status_red"
                >


            </android.support.v7.widget.LinearLayoutCompat>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/driver_img"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_height="@dimen/_65sdp"
                    app:srcCompat="@drawable/profie_pic"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/driver_img"
                    android:text="driver Name"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/driver_img"
                    android:layout_below="@id/driver_name"
                    android:text="my new Car"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/driver_car"
                    android:layout_marginRight="@dimen/_10sdp"/>


                <TextView
                    android:layout_width="52dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/driver_name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="94dp"
                    android:visibility="gone"
                    android:layout_toLeftOf="@id/driver_car"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="left"
                    android:text="4 alsop7"
                    android:textAlignment="gravity"
                    android:textSize="@dimen/_10sdp" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_toStartOf="@+id/driver_car"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/driver_name"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/driver_car"
                        android:fontFamily="@font/cairo_semibold"
                        android:gravity="left"
                        android:text="مقعد"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/driver_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/driver_name"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/driver_car"
                        android:fontFamily="@font/cairo_semibold"
                        android:gravity="left"
                        android:padding="@dimen/_4sdp"
                        android:text="4 "
                        android:textAlignment="gravity"
                        android:textSize="@dimen/_10sdp" />
                </android.support.v7.widget.LinearLayoutCompat>

                <RatingBar
                    android:id="@+id/driver_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_below="@id/driver_car"
                    android:layout_toLeftOf="@id/driver_img"
                    android:theme="@style/RatingBar" />
                <TextView
                    android:id="@+id/driver_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/driver_rating"
                    android:layout_below="@id/parent"
                    android:text="4 الصبح "
                    android:fontFamily="@font/cairo_semibold"
                    android:layout_alignParentLeft="true"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"/>
            </RelativeLayout>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="1"
                >
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="start"
                    >

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layoutDirection="rtl"
                        android:layout_height="@dimen/_25sdp">
                        <TextView
                            android:id="@+id/to_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="متجه من : "
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/cairo_semibold"
                            android:textSize="@dimen/_10sdp"/>
                        <TextView
                            android:id="@+id/driver_start"
                            android:layout_toLeftOf="@id/to_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/cairo_semibold"
                            android:textSize="@dimen/_10sdp"
                            android:text="القاهره"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="@dimen/_25sdp">
                        <TextView
                            android:id="@+id/from_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="متجه الي : "
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:fontFamily="@font/cairo_semibold"
                            android:textSize="@dimen/_10sdp"/>
                        <TextView
                            android:id="@+id/driver_destination"
                            android:layout_toLeftOf="@id/from_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_semibold"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"
                            android:text="القاهره"/>
                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_4sdp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/button_shap_circle_green" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:background="#6E6E6E" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/button_shap_circle_orange" />
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>
            <Button
                android:id="@+id/driver_take_btn"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ride_status_red"
                android:text="حجز الرحلة"
                android:textColor="#fff"
                android:fontFamily="@font/cairo_semibold"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>