<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/driver_img"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    app:srcCompat="@drawable/profie_pic"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/driver_img"
                    android:text="driver Name"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/driver_img"
                    android:layout_below="@id/driver_name"
                    android:text="my new Car"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/driver_car"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/driver_seat"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/driver_car"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@id/driver_name"
                    android:textAlignment="gravity"
                    android:text="4 alsop7"
                    android:gravity="left"/>
                <RatingBar
                    android:id="@+id/driver_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_below="@id/driver_car"
                    android:layout_toLeftOf="@id/driver_img"
                    android:theme="@style/RatingBar" />
                <TextView
                    android:id="@+id/driver_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/driver_rating"
                    android:layout_below="@id/driver_seat"
                    android:text="4 الصبح "
                    android:fontFamily="@font/cairo_semibold"
                    android:layout_alignParentLeft="true"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/to_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="متجه من : "
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/driver_start"
                    android:layout_toLeftOf="@id/to_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:text="القاهره"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/from_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="متجه الي : "
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/driver_destination"
                    android:layout_toLeftOf="@id/from_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_semibold"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="القاهره"/>
            </RelativeLayout>
            <Button
                android:id="@+id/driver_take_btn"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_design"
                android:text="حجز الرحلة"
                android:textColor="#fff"
                android:fontFamily="@font/cairo_semibold"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>